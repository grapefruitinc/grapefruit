<% page_title "Editing #{@lecture.name}" %>

<%= breadcrumbs([
      link_to("All Courses", courses_path),
      link_to(@course.name, course_path(@course)),
      link_to(@capsule.name, [@course, @capsule]),
      link_to("Edit #{@lecture.name} from #{@capsule.name}", void, class: "current")
    ])
%>

<div class="landing">

  <div class="description">
    <h3>Edit Lecture from <%= @capsule.name %></h3>
  </div>

  <div class="login">
    <%= form_for [@course, @capsule, @lecture] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, placeholder: "Name", autofocus: true %>

      <%= f.text_area :description, placeholder: "This lecture will focus on ..." %>

      <%= f.text_field :lecture_number, placeholder: "Lecture Number" %>

      <div><%= f.submit "Update Lecture", class: "button small" %></div>
    <% end %>
  </div>

</div>