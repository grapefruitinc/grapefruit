<% if video.youtube_id %>
  <div class="row">
    <h5 class="video-title">
      <%= video.title %>
      <a class="video-button replay">REPLAY</a>
    </h5>

    <div class="columns large-8">
      <div class="video-wrapper">
        <iframe type="text/html" width="560" height="315" src="//www.youtube.com/embed/<%=video.youtube_id%>?enablejsapi=1&controls=0&showinfo=0" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>

    <div class="columns large-4">
      <ul class="video-texts">
        <%= render video.video_texts.order(time: :asc) %>
      </ul>
      <% if can? :manage, @course %>
        <div>
          <%= link_to "Add Video Annotation", new_course_capsule_lecture_video_video_text_path(@course, @capsule, @lecture, video), class: "button small" %>
          <%= link_to "View/Edit Video Annotations", course_capsule_lecture_video_video_texts_path(@course, @capsule, @lecture, video), class: "button small" %>
        </div>
      <% end %>
    </div>
  </div>
<% elsif video.mediasite_url %>
  <div class="row">
    <%= link_to "Remove Mediasite Video",
                course_capsule_lecture_video_path(@course, @capsule, @lecture, video),
                data: { confirm: "Are you sure?" },
                method: :delete,
                class: "button alert small" %>
  </div>
  <div class="row">
    <iframe style="width:60%;height:500px;" frameborder="0" scrolling="auto" marginheight="0" marginwidth="0" src="<%= video.mediasite_url %>"></iframe>
  </div>
<% end %>