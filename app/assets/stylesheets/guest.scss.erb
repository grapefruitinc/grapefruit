@import "application";

.top-bar-container {
    background-color: #fff;
    position: relative;
  .nav-area {
    a.active{
      background-color: $topbar-bg-color;
      color: #fff;
    }
  }
}

.page-header-container {
    background-image: url(<%= asset_path 'happykids.jpeg' %>);
    background-position: 0% 45%;
    background-size: 100%;
    padding: 4rem 0 10rem;
    margin-bottom: 0;
}

.page-header {
    text-align: center;
    h1 {
        font-size: 3.5rem;
        font-weight: normal !important;
        text-shadow: 1px 1px 3px #222;
    }
}

div.main-content{
    padding: 0em;
    background-image: url(<%= asset_path 'orchard.jpeg' %>);
    background-position: 0% 20%;
    background-size: 100%;

    div.logo{
        @include grid-column(12);
        margin-bottom: 2em;
    }

    div.content{
        @include grid-column(8, $offset: 2);
        padding: 1em 2em;
        margin-bottom: 2em;
        background-color: rgba(255, 255, 255, 0.7);
        float:none;
        min-height: 400px;
        hr{
          border-color: #aaa;
        }
    }
    div.about.content, div.contact.content,div.contribute.content{
      padding: 1em 15%;
    }
    div.changelog.content h6{
      span{
        margin-left: 1em;
        @extend .grey;
      }
    }
    div.landing{
      text-align: center;
      p.description{
        color: $grey-text-color;
      }
      a.login{
        margin-right: 1em;
      }
    }

    form.login-form{
        input[type="submit"]{
            margin-bottom: .8em;
            width: 100%;
            border-radius: 4px;
        }
        fieldset{
          border: none;
        }
    }
    div.login-form-container{
        @include grid-column(3, $center: true);
        padding-top: 0em;
        padding: .5rem 2rem;
        width: 30rem;
        @media #{$medium} {@include grid-column(10);}
        @media #{$small} {@include grid-column(12);}
        fieldset{
          margin:0;
        }
        a.new-call{
          margin-bottom:0;
        }
    }
    h3 {
        text-align: center;
        background: none;
    }
    div.register{
        @include grid-column(3, $center: true);
    }
}

.register-form-container {
    @extend .login-form-container;
    margin-top: 0 !important;
    border: none;
}
